<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:statusBarColor">@color/bottom_navigation_bg_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/slide_bottom
        </item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
        <item name="colorPrimaryDark">@color/bottom_navigation_bg_dark</item>

    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/editHint</item>
        <item name="android:calendarTextColor">@color/blackColor</item>
        <item name="android:dayOfWeekBackground">@color/white</item>
        <item name="android:yearListSelectorColor">@color/blackColor</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2016</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_8sdp</item>

    </style>


    <style name="TextInputLayout.HintText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blackColor</item>


    </style>

    <style name="TextInputLayout">
        <item name="colorControlActivated">@color/bottom_nav_color</item>
        <item name="colorControlNormal">@color/bottom_nav_color</item>
        <item name="colorControlHighlight">@color/bottom_nav_color</item>
    </style>

    <style name="ProfileRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/my_compound_button_color_selector</item>
    </style>

    <style name="Custom.Widget.CardView" parent="CardView">
        <item name="cardBackgroundColor">?attr/watchlist_background</item>
        <item name="android:background">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">true</item>

    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#224ba3</item>
    </style>

</resources>