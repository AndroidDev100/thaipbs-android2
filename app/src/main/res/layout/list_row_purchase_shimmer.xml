<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/cv_tvod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/NontonSize8">

        <!-- MOCK Layout (when you are still fetching data) -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sflMockContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/NontonSize8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/NontonSize5"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="22dp"
                        android:background="#e9e9e9" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="#e9e9e9" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:background="#e9e9e9" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:background="#e9e9e9" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>


</layout>