<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="playlistItem"
            type="com.mvhub.mvhubplus.beanModelV3.uiConnectorModelV2.EnveuVideoItemBean" />
    </data>

    <com.mvhub.mvhubplus.utils.thirdparty.RippleView
        android:id="@+id/rippleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rv_centered="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@android:color/transparent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/theme_white"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/heroImage"
                errorImage="@{@drawable/placeholder_landscape}"
                imageUrl="@{playlistItem.posterURL}"
                placeholder="@{@drawable/placeholder_landscape}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/theme_white"
                android:src="@drawable/placeholder_landscape" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingStart="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.mvhub.mvhubplus.utils.thirdparty.RippleView>
</layout>