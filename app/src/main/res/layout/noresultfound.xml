<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/more_recyclerview_background_color">

        <LinearLayout
            android:id="@+id/nodatafounmd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="?attr/backgroundColor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/no_data"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/ic_no_data"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sarabun_v7_thai_latin_regular"
                android:text="@string/no_result_found"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/retryAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bordrer_button"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sarabun_v7_thai_latin_regular"
                android:paddingStart="@dimen/_35sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_35sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/retry"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>