<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/toolbar_background">


            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_marginLeft="@dimen/NontonSize20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/toolbar_back_arrow"
                    android:contentDescription="TODO" />
            </LinearLayout>


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_medium"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/back_layout"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/share_icon"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/watchListWidth"
                    android:layout_height="@dimen/watchListHeight"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/NontonSize8"
                    android:contentDescription="TODO"
                    app:srcCompat="?attr/share_icon" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shadow"
                />


        </RelativeLayout>


    </LinearLayout>
</layout>