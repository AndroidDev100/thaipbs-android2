<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="playlistItem"
            type="me.vipa.app.beanModelV3.uiConnectorModelV2.EnveuVideoItemBean" />
        <variable
            name="progress"
            type="Integer" />
    </data>

    <me.vipa.app.utils.thirdparty.RippleView
        android:id="@+id/rippleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rv_centered="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <androidx.cardview.widget.CardView
                style="@style/Custom.Widget.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/NontonSize2">

                <me.vipa.app.utils.CustomProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/splash_logo_width">

                    <ImageView
                        android:id="@+id/itemImage"
                        errorImage="@{@drawable/placeholder_landscape}"
                        placeholder="@{@drawable/placeholder_landscape}"
                        android:layout_width="@dimen/NontonSize168"
                        android:layout_height="@dimen/NontonSize95"
                        android:background="@drawable/placeholder_landscape"
                        android:contentDescription="TODO"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/llContinueProgress"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_height="match_parent"
                        android:visibility="visible">


                        <RelativeLayout
                            android:layout_width="@dimen/NontonSize168"
                            android:layout_height="@dimen/NontonSize93">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="@dimen/NontonSize30"
                                android:layout_height="@dimen/NontonSize30"
                                android:background="@drawable/play_icon_ios"
                                android:contentDescription="TODO"
                                android:scaleType="fitXY" />




                        </RelativeLayout>


                        <SeekBar
                            android:id="@+id/progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:background="@color/bottom_navigation_bg_dark"
                            android:minHeight="0dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressDrawable="@drawable/progress_background"
                            android:thumb="@color/gray"
                            android:thumbTint="@android:color/transparent"
                            tools:targetApi="lollipop"
                            android:progress="@{progress}"
                            android:elevation="10dp"/>
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="@dimen/NontonSize168"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:ellipsize="end"
                            android:fontFamily="@font/sukhumvittadmai_bold"
                            android:maxLines="1"
                            android:text=""
                            android:layout_marginTop="@dimen/NontonSize5"
                            android:textColor="?attr/list_circle_item_title_color"
                            android:textSize="@dimen/itemRowItem"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/description_txt"
                            android:layout_width="@dimen/NontonSize168"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/NontonSize3"
                            android:ellipsize="end"
                            android:fontFamily="@font/sukhumvittadmai_medium"
                            android:maxLines="1"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="?attr/list_circle_item_description"
                            android:textSize="@dimen/font_xsmall" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/above_shado"
                        android:fontFamily="@font/sukhumvittadmai_normal"
                        android:gravity="left"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Gadis"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/flExclusive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="-2dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/vip_badge_width"
                        android:layout_height="@dimen/vip_badge_height"
                        android:layout_gravity="center"
                        android:src="@{playlistItem.vipImageDrawable, default=@drawable/vip_icon_120}"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="-2dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/episode_badge_width"
                        android:layout_height="@dimen/episode_badge_height"
                        android:layout_gravity="center"
                        android:src="@{playlistItem.episodeImageDrawable, default=@drawable/episode_icon_120}"
                        tools:ignore="ContentDescription"/>
                </FrameLayout>


                <FrameLayout
                    android:id="@+id/flNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-2dp"
                    android:layout_gravity="end|bottom"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/vip_badge_width"
                        android:layout_height="@dimen/vip_badge_height"
                        android:src="@{playlistItem.newSeriesImageDrawable, default=@drawable/series_icon_120}"
                        tools:ignore="ContentDescription"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flNewMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-2dp"
                    android:layout_gravity="end|bottom"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/vip_badge_width"
                        android:layout_height="@dimen/vip_badge_height"
                        android:src="@{playlistItem.newMoviesDrawable, default=@drawable/new_movie_120}"
                        tools:ignore="ContentDescription"/>
                </FrameLayout>


                <ImageView
                    android:id="@+id/ivContinuePlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="continue_watching_play_icon"
                    android:visibility="gone"
                    app:srcCompat="@drawable/play_icon_rounded_blue" />


                <!--<SeekBar-->
                    <!--android:id="@+id/progressBar"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="2dp"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:background="@color/white"-->
                    <!--android:minHeight="0dp"-->
                    <!--android:paddingStart="0dp"-->
                    <!--android:paddingEnd="0dp"-->
                    <!--android:paddingBottom="0dp"-->
                    <!--android:progress="50"-->
                    <!--android:progressDrawable="@drawable/progress_background"-->
                    <!--android:thumb="@color/gray"-->
                    <!--android:thumbTint="@android:color/transparent"-->
                    <!--tools:targetApi="lollipop"-->
                    <!--android:visibility="gone"-->
                    <!--android:elevation="10dp"/>-->

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>

    </me.vipa.app.utils.thirdparty.RippleView>

</layout>