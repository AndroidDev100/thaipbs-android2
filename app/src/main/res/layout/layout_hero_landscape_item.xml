<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="playlistItem"
            type="me.vipa.app.beanModelV3.uiConnectorModelV2.EnveuVideoItemBean" />
    </data>

    <me.vipa.app.utils.thirdparty.RippleView
        android:id="@+id/rippleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rv_centered="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@color/black_theme_color">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/black_theme_color"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/heroImage"
                errorImage="@{@drawable/placeholder_landscape}"
                imageUrl="@{playlistItem.posterURL}"
                placeholder="@{@drawable/placeholder_landscape}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/placeholder_landscape"
                android:contentDescription="@string/slider_image_content_discription"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/above_shado"
                android:gravity="bottom"
                android:paddingStart="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/sukhumvittadmai_normal"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </me.vipa.app.utils.thirdparty.RippleView>
</layout>